<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:id="@+id/HomeActivity"
        android:background="@drawable/gradient">

    <TextView
            android:id="@+id/heading2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="DigComp"
            android:lineHeight="55dp"
            android:textStyle="bold"
            android:fontFamily="@font/formal"
            android:textSize="55sp"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Bentornato "
            android:textStyle="bold"
            android:fontFamily="@font/formal"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/heading2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:id="@+id/spacer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/line_half_inner"
                    android:layout_marginBottom="0dp"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/line_half_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="320dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_layout"
                    android:elevation="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_bg"
                    app:layout_constraintTop_toBottomOf="@id/spacer">

            <TextView
                    android:id="@+id/whattodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cosa vuoi Fare Oggi?"
                    android:fontFamily="@font/formal"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title"
            />

            <Button
                    android:id="@+id/btn_teoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/celeste"
                    android:text="Teoria"
                    android:fontFamily="@font/formal"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/whattodo"
                    android:width="130dp"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="-150dp"

            />

            <Button
                    android:id="@+id/btn_esame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/viola"
                    android:text="Esame"
                    android:fontFamily="@font/formal"
                    app:layout_constraintTop_toBottomOf="@id/whattodo"
                    android:width="130dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="150dp"
            />

            <TextView
                    android:id="@+id/recap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Il tuo Storico"
                    android:fontFamily="@font/formal"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/btn_teoria"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title"
            />

            <LinearLayout
                    android:id="@+id/history_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@id/recap"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
